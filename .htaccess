RewriteEngine On
RewriteCond %{REQUEST_URI} !^/maintenance.html$
RewriteRule ^(.*)$ /maintenance.html [R=302,L]
server {
    listen 80;
    server_name yourwebsite.com;

    location / {
        return 302 /maintenance.html;
    }

    location = /maintenance.html {
        root /path/to/your/site;
    }
}